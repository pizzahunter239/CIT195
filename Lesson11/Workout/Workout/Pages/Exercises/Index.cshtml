@page
@model Workout.Pages.Exercises.IndexModel

@{
    ViewData["Title"] = "Exercise List";
}

<h1>Exercise List</h1>

<p>
    <a style="font-size:1.3em;" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Exercise[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise[0].MuscleGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise[0].Equipment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise[0].Reps)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise[0].Sets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise[0].Duration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Exercise) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MuscleGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
