@page
@model Workout.Pages.Exercises.EditModel

@{
    ViewData["Title"] = "Edit Exercise";
}
<div class="bg-opacity-50 bg-light p-3">
<h1>Edit Exercise</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Exercise.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Exercise.Name" class="control-label"></label>
                <input asp-for="Exercise.Name" class="form-control" />
                <span asp-validation-for="Exercise.Name" class="text-danger"></span>
            </div>
            <!--<div class="form-group">
                
                <label asp-for="Exercise.Type" class="control-label"></label>
                <input asp-for="Exercise.Type" class="form-control" />
                <span asp-validation-for="Exercise.Type" class="text-danger"></span>
            </div>-->
            <div class="form-group">
                <label for="type">Type</label>
                <select class="form-control" asp-for="Exercise.Type">
                    <option value="">Select Type</option>
                    @foreach (var type in Model.TypeList)
                    {
                        <option value="@type">@type</option>
                    }
                </select>
                <span asp-validation-for="Exercise.Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                
                <label asp-for="Exercise.MuscleGroup" class="control-label"></label>
                <input asp-for="Exercise.MuscleGroup" class="form-control" />
                <span asp-validation-for="Exercise.MuscleGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Exercise.Equipment" class="control-label"></label>
                <input asp-for="Exercise.Equipment" class="form-control" />
                <span asp-validation-for="Exercise.Equipment" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Exercise.Reps" class="control-label"></label>
                <input asp-for="Exercise.Reps" class="form-control" />
                <span asp-validation-for="Exercise.Reps" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Exercise.Sets" class="control-label"></label>
                <input asp-for="Exercise.Sets" class="form-control" />
                <span asp-validation-for="Exercise.Sets" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Exercise.Weight" class="control-label"></label>
                <input asp-for="Exercise.Weight" class="form-control" />
                <span asp-validation-for="Exercise.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Exercise.Duration" class="control-label"></label>
                <input asp-for="Exercise.Duration" class="form-control" />
                <span asp-validation-for="Exercise.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
