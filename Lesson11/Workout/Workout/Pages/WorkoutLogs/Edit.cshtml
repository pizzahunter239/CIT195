@page
@model Workout.Pages.WorkoutLogs.EditModel

@{
    ViewData["Title"] = "Edit Workout Log";
}
<div class="bg-opacity-50 bg-light p-3">
<h1>Edit Workout Log</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WorkoutLog.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="WorkoutLog.Date" class="control-label"></label>
                <input asp-for="WorkoutLog.Date" class="form-control" />
                <span asp-validation-for="WorkoutLog.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="WorkoutLog.UserId" class="control-label"></label>
                <select asp-for="WorkoutLog.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="WorkoutLog.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="WorkoutLog.ExerciseId" class="control-label"></label>
                <select asp-for="WorkoutLog.ExerciseId" class="form-control" asp-items="ViewBag.ExerciseId"></select>
                <span asp-validation-for="WorkoutLog.ExerciseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
